# Configurações do Servidor
PORT=3000
NODE_ENV=development

# URLs
FRONTEND_URL=https://anunciargrajaueregiao.com
API_URL=https://api.anunciargrajaueregiao.com

# Supabase
SUPABASE_URL=sua_url_do_supabase
SUPABASE_KEY=sua_chave_publica_do_supabase
SUPABASE_SERVICE_ROLE=sua_chave_service_role_do_supabase

# Configurações de Upload
MAX_FILE_SIZE=5242880 # 5MB em bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Configurações de Cache
CACHE_TTL=3600 # 1 hora em segundos

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=900000 # 15 minutos em milissegundos
RATE_LIMIT_MAX=100 # máximo de requisições por janela de tempo 